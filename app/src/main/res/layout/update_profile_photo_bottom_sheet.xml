<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.dialogs.update_profile_photo.">
    <data>
        <variable name="viewModel"
            type="com.beetleware.hayatiDeliveryMan.ui.fragments.personal_profile.PersonalProfileViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/container_for_gallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/space_15"
            android:text="@string/gallery"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x12sp" />

        <TextView
            android:id="@+id/container_for_camera"
            android:layout_below="@id/container_for_gallery"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:gravity="center_horizontal"
            android:text="@string/camera"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x12sp"
            android:paddingTop="@dimen/x16dp"
            />



    </RelativeLayout>

</layout>