<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.beetleware.hayatiDeliveryMan.ui.fragments.terms_coditions.TermsAndConditionsViewModel" />
    </data>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/container_for_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80dp"
                    android:background="@drawable/radius_search"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x70dp">

                        <ImageView
                            android:id="@+id/btn_back"
                            style="@style/clickable_view_border"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/x10dp"
                            android:layout_marginEnd="@dimen/space_10"
                            android:background="@drawable/ic_baseline_arrow_back_24"
                            android:backgroundTint="@color/white"
                            android:padding="@dimen/x13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/questive_bold"
                            android:text="@string/terms_conditions"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x18sp" />

                    </RelativeLayout>

                </LinearLayout>


                <ImageView
                    android:id="@+id/img_privacy_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x120dp"
                    android:src="@drawable/ic_privacy_conditions" />

                <TextView
                    android:id="@+id/tv_terms_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_privacy_conditions"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginEnd="@dimen/space_12"
                    android:layout_marginBottom="@dimen/space_12"
                    android:textColor="@color/light_pink"
                    android:textSize="@dimen/x12sp"
                    tools:text="وريم ايبسوم هو نموذج افتراضي يوضع في التصاميم لتعرض على العميل ليتصور طريقه وضع النصوص بالتصاميم سواء كانت تصاميم مطبوعه ... بروشور او فلاير على سبيل وريم ايبسوم هو نموذج افتراضي يوضع في التصاميم لتعرض على العميل ليتصور طريقه وضع النصوص بالتصاميم سواء كانت تصاميم مطبوعه ... بروشور او فلاير على سبيل وريم ايبسوم هو نموذج افتراضي يوضع في التصاميم لتعرض على العميل ليتصور طريقه وضع النصوص بالتصاميم سواء كانت تصاميم مطبوعه ... بروشور او فلاير على سبيل" />
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
        <include layout="@layout/progress_bar"
            app:viewModel="@{viewModel}"/>
    </RelativeLayout>

</layout>
